{
    "manifest_version": 2,
    "name": "Fiction.live Downloader",
    "version": "0.1.3",

    "description": "Download stories from fiction.live",

    "icons": {
        "48": "icons/icon-48.png"
    },

    "permissions": [
        "*://fiction.live/*",
        "*://*.fiction.live/*",
        "*://*.cloudfront.net/*",
        "downloads"
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "64": "icons/icon-64.png"
        },
        "default_popup": "popup/view.html",
        "default_title": "Fiction.live Download"
    },

    "background": {
        "scripts": ["jquery-3.6.0.min.js", "jszip.min.js", "browser_pack.js"]
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "ficlivedl@alethiophile.dev"
        }
    }
}
